{% extends "layouts.main" %}
{% block title %}Войти{%endblock%}

{% block content %}
    <h2 class="text-center">Войти</h2>
    <form class="col-4 offset-4 border rounded" method="post" action="{{ route('login') }}">
        {{ csrf_field() }}
        <div class="mb-3">
            <label class="col-form-label-lg" for="email">Email</label>
            <input name="email" id="email" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label class="col-form-label-lg" for="password">Пароль</label>
            <input name="password" id="password" type="password" class="form-control">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="remember" name="remember">
            <label class="form-check-label" for="remember">Запомнить меня</label>
        </div>

        {% if errors.any() %}
            <div class="alert alert-danger">
                <ul class="form-errors-list">
                    {% for error in errors.all() %}
                        <li>{{ error|capitalize }}</li>
                    {% endfor %}</ul>
            </div>
        {% endif %}

        <div class="mb-3">
            <button class="btn btn-primary" type="submit" name="login">Войти</button>
        </div>

    </form>
{% endblock %}
