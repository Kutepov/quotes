{% extends "layouts.main" %}
{% block title %}Добавить цитату{%endblock%}

{% block content %}
    <h2 class="text-center">Добавить цитату</h2>
    <form class="col-8 offset-2 border rounded" method="post" action="{{ route('quotes.store') }}">
        {{ csrf_field() }}
        <div class="mb-3">
            <label class="col-form-label-lg" for="source">Источник</label>
            <input name="source" id="source" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label class="col-form-label-lg" for="text">Текст</label>
            <textarea name="text" id="text" class="form-control" rows="5"></textarea>
        </div>

        {% if errors.any() %}
            <div class="alert alert-danger">
                <ul class="form-errors-list">
                    {% for error in errors.all() %}
                        <li>{{ error|capitalize }}</li>
                    {% endfor %}</ul>
            </div>
        {% endif %}

        <div class="mb-3">
            <button class="btn btn-primary" type="submit" name="login">Добавить</button>
        </div>

    </form>
{% endblock %}
