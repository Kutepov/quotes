<form class="col-8 offset-2 border rounded" method="post" action="{{ quote is defined ? route('quotes.update', quote.id) : route('quotes.store') }}">
    {{ csrf_field() }}
    {{ quote is defined ? method_field('PUT') : '' }}
    <div class="mb-3">
        <label class="col-form-label-lg" for="source">Источник</label>
        <input value="{{ input_old('source', quote is defined ? quote.source : null) }}" name="source" id="source" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label class="col-form-label-lg" for="text">Текст</label>
        <textarea name="text" id="text" class="form-control" rows="5">{{ input_old('text', quote is defined ? quote.text : nnull)}}</textarea>
    </div>

    {% if errors.any() %}
        <div class="alert alert-danger">
            <ul class="form-errors-list">
                {% for error in errors.all() %}
                    <li>{{ error|capitalize }}</li>
                {% endfor %}</ul>
        </div>
    {% endif %}

    <div class="mb-3">
        <button class="btn btn-primary" type="submit" name="login">{{ quote is defined ? 'Сохранить' : 'Добавить' }}</button>
    </div>
</form>
